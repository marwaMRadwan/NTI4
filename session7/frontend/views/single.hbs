{{>nav}}
<section class="my-3 container">
    {{#if error}}
    <div class="alert alert-danger">
        {{error}}
    </div>
    {{else}}
    <div class="row">
        {{#with data}}
        <h3>{{title}}</h3>
        <p>{{body}}</p>
        <a href="/post/{{id}}" class="btn btn-primary">more</a>
        {{/data}}
    </div>
    {{/if}}
</section>
{{>footer}}